@using Microsoft.AspNetCore.Identity
@using PocMVCApp.Data;
@using PocMVCApp.Entities;
@using PocMVCApp.Areas.Identity.Pages.Account.Manage
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

@if (SignInManager.IsSignedIn(User) && ViewBag.IsTwoFactorEnabled == false)
{
    <div class="row d-flex justify-content-end">
        <div class="col-md-6">
            <div class="alert alert-warning alert-dismissible fade show shadow-lg p-2" role="alert">
                <p class="text-dark">Secure your account now.</p>
                <a class="text-primary text-decoration-none" href="Identity/Account/Manage/EnableAuthenticator">Enable Two-factor authentication</a>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>
        </div>
    </div>
}
else
{
    <div class="row mt-5 mb-5">
        <div class="col-12">
            <h1 class="display-3">Welcome to Light Server Host</h1>
            <p class="lead">Elevate your online presence with expert web development solutions. <span class="fw-bold">Get started today</span> and unlock the potential of your digital presence.</p>
        </div>
        <div class="col-12 col-md-6">
            <p class="lead">"For a tailored web experience and unmatched professionalism...</p>
            <button class="nav-link btn btn-primary fw-bold text-light" href="#">Get in touch</button>
        </div>
    </div>
}
@*This renders a partial view named _LandingSection*@
<div>
    <partial name="_LandingSection" />
    <partial name="_FeatureSection" />
</div>









